<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/wrapper"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BuyerMenu">

    <TextView
        android:id="@+id/tVUname"
        android:layout_width="238dp"
        android:layout_height="26dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:textColor="#1368AA"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btProfile"
        android:layout_width="60dp"
        android:layout_height="66dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="22dp"
        android:adjustViewBounds="false"
        android:backgroundTint="@color/cardview_light_background"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btCart"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/accoun" />

    <ImageButton
        android:id="@+id/btCart"
        android:layout_width="58dp"
        android:layout_height="59dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="23dp"
        android:backgroundTint="@color/cardview_light_background"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toStartOf="@+id/btProfile"
        app:layout_constraintStart_toEndOf="@+id/tVUname"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/shopping" />

</androidx.constraintlayout.widget.ConstraintLayout>