<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminActivity">

    <Button
        android:id="@+id/btlogouT"
        android:layout_width="93dp"
        android:layout_height="43dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="302dp"
        android:text="LogOut"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/addnewprod"
        android:layout_width="108dp"
        android:layout_height="40dp"
        android:layout_marginStart="151dp"
        android:layout_marginTop="258dp"
        android:layout_marginEnd="152dp"
        android:text="Add a product"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/viewmyprods"
        android:layout_width="108dp"
        android:layout_height="40dp"
        android:layout_marginStart="151dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="152dp"
        android:text="View My Products"
        android:textSize="8sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addnewprod" />

    <Button
        android:id="@+id/deliveryrequests"
        android:layout_width="112dp"
        android:layout_height="40dp"
        android:layout_marginStart="151dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="148dp"
        android:text="My delivery requests"
        android:textSize="8sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewmyprods" />
</androidx.constraintlayout.widget.ConstraintLayout>